<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".HomeActivity">

    <com.aniketjain.kidsdrawingapp.view.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/drawing_view_bg" />

    <LinearLayout
        android:id="@+id/palette_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/brush_ib"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        tools:ignore="ContentDescription,UsingOnClickInXml,KeyboardInaccessibleWidget,UnusedAttribute">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/skin"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/skin" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/black" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/red"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/red" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/green"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/green" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/blue"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/blue" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/yellow"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/yellow" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/cyan"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/cyan" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/pink"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/pink" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/purple"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/purple" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="paintClicked"
            android:src="@drawable/palette_normal"
            android:tag="@color/white" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/brush_ib"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:contentDescription="Image Brush"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_brush_24"
        tools:ignore="HardcodedText" />

</RelativeLayout>