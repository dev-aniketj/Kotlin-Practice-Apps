<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBGColor"
    android:fillViewport="true"
    tools:context=".QuizQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="What country does this flag belong to ?"
            android:textColor="@color/textColor"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_flag_of_argentina" />

        <LinearLayout
            android:id="@+id/progress_bar_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="10"
                android:minHeight="50dp"
                android:progress="1" />

            <TextView
                android:id="@+id/progress_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="0/10"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/option1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/option_bg"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:letterSpacing="0.035"
            android:padding="12dp"
            android:text="Argentina"
            android:textColor="@color/textColor"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/option2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/option_bg"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:letterSpacing="0.035"
            android:padding="12dp"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/option3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/option_bg"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:letterSpacing="0.035"
            android:padding="12dp"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/option4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:background="@drawable/option_bg"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:letterSpacing="0.035"
            android:padding="12dp"
            android:text=""
            android:textColor="@color/textColor"
            android:textSize="19sp" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_bg"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:letterSpacing="0.1"
            android:padding="4dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/btnTextColor"
            android:textSize="19sp" />
    </LinearLayout>
</ScrollView>